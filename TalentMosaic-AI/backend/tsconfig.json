{
  "compilerOptions": {
    "target": "ES2020",             // Utilizar una versión más reciente de ECMAScript
    "module": "ESNext",             // Habilitar soporte para módulos ES
    "outDir": "./dist",             // Directorio donde se colocarán los archivos compilados
    "rootDir": "./src",             // Directorio raíz donde se encuentra tu código fuente
    "moduleResolution": "node",     // Resolución de módulos basada en Node.js
    "strict": true,                 // Habilitar todas las comprobaciones estrictas
    "esModuleInterop": true,        // Habilitar compatibilidad con CommonJS
    "skipLibCheck": true            // Saltar la comprobación de tipos de las bibliotecas
  },
  "include": [
    "src",                          // Incluir toda la carpeta src
    "src/drizzle.config.ts"          // Asegurarse de incluir el archivo de configuración de drizzle
  ],
  "exclude": [
    "node_modules"                  // Excluir la carpeta node_modules
  ]
}
